generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Job {
id            String @id @default(auto()) @map("_id") @db.ObjectId
title         String
isCompleted   Boolean @default(false)
createdAt     DateTime @default(now())
updatedAt     DateTime @updatedAt
}
